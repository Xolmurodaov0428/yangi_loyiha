# ============================================
# Production Environment Configuration
# ============================================
# Serverdagi .env faylingizni shu sozlamalar bilan yangilang
# DIQQAT: Bu faylni .gitignore ga qo'shing!

# ============================================
# Application Settings
# ============================================
APP_NAME="Amaliyot Boshqaruv Tizimi"
APP_ENV=production
APP_KEY=base64:YOUR_GENERATED_KEY_HERE
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Locale Settings
APP_LOCALE=uz
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=Asia/Tashkent

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file

# ============================================
# Database Configuration
# ============================================
# Serveringizdagi ma'lumotlar bilan almashtiring
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_strong_password

# Database Connection Options
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=
DB_STRICT_MODE=true
DB_ENGINE=InnoDB

# ============================================
# Session Configuration
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ============================================
# Cache Configuration
# ============================================
CACHE_STORE=database
CACHE_PREFIX=amaliyot_cache

# Redis (agar ishlatilsa)
# CACHE_STORE=redis
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_CACHE_DB=1

# ============================================
# Queue Configuration
# ============================================
QUEUE_CONNECTION=database

# Redis Queue (agar ishlatilsa)
# QUEUE_CONNECTION=redis
# REDIS_QUEUE=default

# ============================================
# Logging Configuration
# ============================================
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null
LOG_STACK=single

# Daily log rotation
LOG_DAILY_DAYS=14

# ============================================
# Security Settings
# ============================================
BCRYPT_ROUNDS=12

# Password Reset
PASSWORD_RESET_TIMEOUT=3600

# Rate Limiting
THROTTLE_LIMIT=60
THROTTLE_DECAY=1

# ============================================
# Mail Configuration
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Alternative: Mailgun
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=your-domain.com
# MAILGUN_SECRET=your-mailgun-secret
# MAILGUN_ENDPOINT=api.mailgun.net

# Alternative: SendGrid
# MAIL_MAILER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# ============================================
# Broadcasting (agar kerak bo'lsa)
# ============================================
BROADCAST_CONNECTION=log

# Pusher
# BROADCAST_CONNECTION=pusher
# PUSHER_APP_ID=your-app-id
# PUSHER_APP_KEY=your-app-key
# PUSHER_APP_SECRET=your-app-secret
# PUSHER_APP_CLUSTER=mt1

# ============================================
# Filesystem Configuration
# ============================================
FILESYSTEM_DISK=local

# AWS S3 (agar cloud storage kerak bo'lsa)
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=your-bucket-name
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# Telegram Bot (agar ishlatilsa)
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ============================================
# API Settings
# ============================================
API_RATE_LIMIT=60
API_RATE_LIMIT_PERIOD=1

# ============================================
# Third-party Services
# ============================================

# Google Analytics (agar kerak bo'lsa)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking (agar kerak bo'lsa)
# SENTRY_LARAVEL_DSN=https://your-sentry-dsn
# SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================
# Development Tools (Production da o'chirish)
# ============================================
# TELESCOPE_ENABLED=false
# DEBUGBAR_ENABLED=false

# ============================================
# Custom Application Settings
# ============================================

# System Settings
SYSTEM_TIMEZONE=Asia/Tashkent
SYSTEM_CURRENCY=UZS
SYSTEM_LANGUAGE=uz

# File Upload Limits
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Pagination
PAGINATION_PER_PAGE=15

# ============================================
# Backup Configuration (agar ishlatilsa)
# ============================================
# BACKUP_DISK=local
# BACKUP_NOTIFICATION_EMAIL=admin@yourdomain.com

# ============================================
# IMPORTANT NOTES
# ============================================
# 1. php artisan key:generate - APP_KEY yaratish
# 2. Barcha parollarni kuchli qiling (minimum 16 belgi)
# 3. SSL sertifikatini o'rnating
# 4. Database backup tizimini sozlang
# 5. Log monitoring o'rnating
# 6. Firewall sozlang
# 7. Bu faylni .gitignore ga qo'shing!
